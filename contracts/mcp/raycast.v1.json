{
  "openapi": "3.1.0",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "simulation.raycast.v1",
  "description": "Placeholder contract for raycast simulation adapters.",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "origin": {
          "type": "array",
          "items": {"type": "number"},
          "minItems": 3,
          "maxItems": 3
        },
        "direction": {
          "type": "array",
          "items": {"type": "number"},
          "minItems": 3,
          "maxItems": 3
        },
        "distance": {"type": "number", "minimum": 0}
      },
      "required": ["origin", "direction", "distance"]
    },
    "response": {
      "type": "object",
      "properties": {
        "hit": {"type": "boolean"},
        "point": {
          "type": ["array", "null"],
          "items": {"type": "number"},
          "minItems": 3,
          "maxItems": 3
        }
      },
      "required": ["hit", "point"]
    }
  },
  "required": ["request", "response"]
}
